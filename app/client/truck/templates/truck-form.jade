- var moduleName = 'truck';

form(name="form" novalidate='' md-theme='#{moduleName}')

  file-uploader(font-icon='mdi mdi-camera' font-icon-bg='mdi mdi-truck' ng-model='mForm.form.photo' theme='#{moduleName}')

  ye-input(label='fields.licensePlate' field='licensePlate' required)
  ye-input(label='fields.licensePlateLateral' field='licensePlateLateral' required)
  ye-input(label='fields.model' field='model' required)
  ye-input(label='fields.brand' field='brand' required)
  ye-input(label='fields.aka' field='aka')
  ye-input(label='fields.tare' field='tare' type='number')

  md-radio-group(ng-model="mForm.form.status")
    md-radio-button(
      ng-repeat='option in mForm.formAux.status'
      ng-value="option.value") {{option.label | translate | capitalize}}

  ye-input(label='fields.ubication' field='ubication' title='{{::mForm.form.licensePlate}}' geoposition required)
  ye-input(label='fields.description' field='description' textarea maxlength )
  

  form-actions
