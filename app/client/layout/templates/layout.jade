div(layout='column')
  md-toolbar(md-scroll-shrink)
    include ./appbar.jade

  md-sidenav(
    md-component-id='left'
    class='md-sidenav-left md-whiteframe-z2'
    md-is-locked-open="$mdMedia('gt-md')"
    ng-class='{"sidenav--large": layout.ui.leftSidenavLocked}'
  )
    include ./sidenav-left.jade

  md-content(ng-class='{"content--large": layout.ui.leftSidenavLocked}')

    aside(
      ng-show='layout.ui.loadStateInProgress'
      layout layout-align='center start'
      class='spinner--content fx-dur-300 fx-fade-up'
    ): md-progress-circular(md-mode='indeterminate')

    div(
      ui-view='content'
      ng-hide='layout.ui.loadStateInProgress'
      class='fx-dur-450 fx-fade-up'
    )

  md-sidenav(
    md-component-id='right'
    class = 'md-sidenav-right md-whiteframe-z2'
    ng-class='layout.ui.sidenavRightContentClass'
  )
    include ./sidenav-right.jade
